<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.admin.pagination.Activities.SecondActivities.NewsSecondActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#0a92cb"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/title_quastion"
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="@string/tv_faq_answer"/>
                <TextView
                    android:paddingBottom="10dp"
                    android:text="asdaa sdad sd fsd fsdf asd fasd fasdf asd fasd fasd fasd fasd fsd"
                    android:textStyle="bold"
                    android:layout_margin="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:id="@+id/tv_answer"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/title_answer"
                android:paddingTop="10dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/tv_faq_answer"/>
            <TextView

                android:background="@drawable/rv_embassy"
                android:padding="10dp"
                android:lineSpacingMultiplier="1.5"
                android:textSize="16sp"
                android:text="dssdas dg sdgasd gasd gasdg adsg ads gad gasdg asd gasd gasd gasdg asdg asdg asdg a sdgasd gasd asg asdg asdg asdgag asgasdgasd g"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_news_second"/>
            <Button
                android:onClick="onclick"
                android:visibility="gone"
                android:id="@+id/bt_faq_second"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_main"
                android:text="перейти"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>